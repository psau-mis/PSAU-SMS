<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="inherit_email_notif" name="Inherit mail notification layout" inherit_id="mail.mail_notification_layout">
        <xpath expr="//p[@style='color: #555555; font-size:11px;']" position="replace">
            
        </xpath>
        <xpath expr="//table/tbody/tr[1]" position="replace">
            <tr>
                <td valign="center">
                    <img t-attf-src="/esmis_base/static/img/psau.png" 
                        style="padding: 0px; margin: 0px; height: auto; max-width: 250px; max-height: 40px;" 
                        t-att-alt="'%s' % company.name"/>
                </td>
            </tr>
        </xpath>

    </template>
</odoo>
