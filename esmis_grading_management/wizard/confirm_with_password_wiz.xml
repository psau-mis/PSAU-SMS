<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="esmis_confirm_with_password_wiz_form_view" model="ir.ui.view">
		<field name="name">esmis.confirm.with.password.wiz.form</field>
		<field name="model">esmis.confirm.with.password.wiz</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="password" password="True"/>
					</group>
				</sheet>
				<footer>
					<button name="confirm_admission" string="Confirm" type="object" class="oe_highlight" />
					<button string="Cancel" class="btn-secondary" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
</odoo>