<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="esmis_signatories_admissions_form" model="ir.ui.view">
			<field name="name">esmis.signatories.admission.form</field>
			<field name="model">esmis.signatories</field>
			<field name="inherit_id" ref="esmis_base.view_esmis_signatories_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='position']" position="after">
					<field name="honorific" placeholder="Dr./Engr. etc..."/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>